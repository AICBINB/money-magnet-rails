<div class="grid grid-cols-2 gap-4 p-5 bg-white rounded-md text-magneticplum font-bold">

  <div>

    <%= image_tag "logo_type.svg", class: "mb-8", width: "251", height: "49" %>

    <h1 class="headline-font text-md uppercase pl-12">
      keep track of your
      <br>
      personal finances
    </h1>
  </div>

  <div>

    <h5 class="headline-font text-xs mb-4">
      Log in to your Money Magnet account. This account
      <br>
      can be used across the web and mobile platforms.
    </h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <div class="field mb-4">
        <%= f.email_field :email, autofocus: true, placeholder: "Email address", autocomplete: "email", class: "form-inputs" %>
      </div>

      <div class="field mb-4">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-inputs" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-4">
          <%= f.check_box :remember_me, class: "rounded-full border-2" %>
          <%= f.label :remember_login_info, class: "text-xs" %>
        </div>
      <% end %>

      <div class="actions mb-4">
        <%= f.submit "Login", class: "flex rounded-md text-white bg-moneygreen ml-10 px-20 py-2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
  