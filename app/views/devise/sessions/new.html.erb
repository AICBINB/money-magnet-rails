<div class="grid grid-cols-2 gap-4 p-5 bg-white rounded-md text-magneticplum font-bold">
  <div class="">
    <%= image_tag "logo_type.png", class: "mb-8", width: "189", height: "37" %>
    <h1 class="uppercase">
      keep track of your
      <br>
      personal finances
    </h1>
  </div>

  <div>
    <h5 class="mb-4">
      Log in to your Money Magnet account. This account
      <br>
      can be used across the web and mobile platforms.
    </h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-4">
        <%= f.email_field :email, autofocus: true, placeholder: "Email address", autocomplete: "email", class: "font-normal rounded-t-md border-0 bg-magnetic-grey" %>
      </div>

      <div class="field mb-4">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "font-normal rounded-t-md border-0 bg-magnetic-grey" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "rounded-full" %>
          <%= f.label :remember_login_info, class: "text-xs" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
  