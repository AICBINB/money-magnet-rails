<div class="p-5 bg-white rounded-md text-magneticplum font-bold">

  <h2 class="headline-font text-lg uppercase pl-16 mb-8">Reset Password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-8">
      <%= f.email_field :email, autofocus: true, placeholder: "Email address", autocomplete: "email", class: "form-inputs" %>
    </div>

    <div class="actions mb-8">
      <%= f.submit "Submit", class: "rounded-md text-white bg-moneygreen px-24 py-2 ml-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
